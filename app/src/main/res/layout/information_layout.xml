<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_information"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/winered"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    <TextView
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/first_name_information_2"
        android:text="First name "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/first_name_information"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/first_name_information_2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/winered"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/last_name_information_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/first_name_information"
        android:text="Last name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/last_name_information"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/last_name_information_2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/winered"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/email_information_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/last_name_information"
        android:text="Email address"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/email_information"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp"
        android:layout_below="@id/email_information_2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/winered"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/phone_information_2"
        android:layout_below="@id/email_information"
        android:text="Phone number"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
         />
    <TextView
        android:id="@+id/phone_information"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_below="@id/phone_information_2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/winered"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/home_phone_information_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/phone_information"
        android:text="Home phone number"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"/>
    <TextView
        android:id="@+id/home_phone_information"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/home_phone_information_2"
        android:backgroundTint="@color/winered"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/card_number_information_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/home_phone_information"
        android:text="card number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/card_number_information"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/card_number_information_2"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/winered"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/address_information_2"
        android:layout_below="@id/card_number_information"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Address"/>
    <TextView
        android:id="@+id/address_information"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/address_information_2"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:backgroundTint="@color/winered"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/username_information_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/address_information"
        android:gravity="center"/>
    <TextView
        android:id="@+id/username_information"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/username_information_2"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:backgroundTint="@color/winered"
        android:layout_marginBottom="10dp"/>
    </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</android.support.v4.widget.DrawerLayout>